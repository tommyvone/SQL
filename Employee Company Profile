/* Employee company profile SQL  */

CREATE TABLE employees (
        id INTEGER PRIMARY KEY AUTOINCREMENT,
        employee_id INTEGER,
        first_name TEXT,
        last_name TEXT,
        phone_number INTEGER,
        email TEXT);

